.series-list-item
    width: 50%
    display: block
    position: relative
    cursor: pointer
    overflow: hidden

    +at-phone-landscape()
        width: (100/3)%

    +at-tablet()
        width: (100/3)%

    +at-desktop()
        margin: .25%
        width: 24.5%

        &:hover
            box-shadow: 0 0 3px 2px rgba(color--brand-primary, .8)

    +at-hd-desktop()
        margin: .20%
        width: 19.60%
    
    

.series-list-image
    width: 100%
    margin-bottom: -.2em

.series-list-info
    width: 100%
    position: absolute
    bottom: 0
    left: 0
    background: rgba(color--brand-primary, .7)
    padding: .5em
    height: 1em

.series-list-info-title
    ellipsis-overflow(calc(100% - 1em))
    margin: 0
    color: white
    font-weight: 200
    font-size: .9em

    +at-phone-landscape()
        font-size: 1em

    +at-tablet()
        font-size: 1.1em

    +at-desktop()
        font-size: .9em