.playlist-list-container
    +at-desktop()
        margin-top: 1em


.playlist-list
    overflow-x: hidden
    max-width: 100%


.playlist-list-item
    background: color--navbar-bg
    padding: .5em
    width: 90%
    margin: 1em auto
    display: flex


    &:hover
        box-shadow: 0px 0px 6px 2px rgba(color--brand-primary, .7)