.navbar
    background: color--navbar-bg
    height: 100vh
    width: 75vw
    position: fixed
    top: 0
    left: 0
    transform: translateX(-80vw)
    transition: transform .3s ease-in-out
    will-change: transform
    box-shadow: 0px 0px 2px 4px color--box-shadow
    z-index: 9


    &.is-active
        transform: translateX(0vw)

    +at-tablet()
        width: 50vw

    +at-desktop()
        transform: translateX(0vw)
        will-change: auto
        width: 200px