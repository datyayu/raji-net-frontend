.playlist
    background: color--navbar-bg
    height: 100vh
    width: 75vw
    padding: 0 .5em
    box-sizing: border-box
    position: fixed
    top: 0
    right: 0
    overflow-x: hidden
    overflow-y: hidden
    transform: translateX(80vw)
    transition: transform .3s ease-in-out
    will-change: transform
    box-shadow: 0px 0px 4px 2px color--box-shadow
    z-index: 9

    &.is-active
        transform: translateX(0vw)

    +at-desktop() 
        width: 350px

    +at-hd-desktop() 
        transform: translateX(0vw)
        width: 350px

.playlist-header
    color: white
    text-align: center
    border-bottom: 1px solid white
    padding: .4em 0
    margin: 0
    font-weight: 200
    font-size: 2em


.playlist-song-list
    height: 100%
    overflow-y: auto
