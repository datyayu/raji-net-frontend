.header
    background: color--navbar-bg 
    color: white
    height: 4em
    width: 100%
    min-width: 100vw
    box-sizing: border-box
    padding: 1em
    box-shadow: 0px 0px 2px 4px color--box-shadow


.header-content
    display: flex
    width: 100%
    justify-content: space-between
    align-items: center


.header-icon
    font-size: 2em


.header-title
    ellipsis-overflow(70vw)
    margin: 0
    font-weight: 200
    text-align: center


.header-search
    display: none
