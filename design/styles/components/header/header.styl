.header
    background: color--navbar-bg 
    color: white
    height: 4em
    width: 100%
    min-width: 100vw
    box-sizing: border-box
    padding: 1em
    box-shadow: 0px 0px 2px 4px color--box-shadow

    +at-desktop()
        min-width: calc(100vw - 200px)
        height: 6em
        background: none
        box-shadow: none


.header-content
    display: flex
    width: 100%
    justify-content: space-between
    align-items: center

    +at-desktop()
        width: 90%
        border-bottom: 1px solid color--divider
        margin: 0 auto


.header-icon
    font-size: 2em
    cursor: pointer

    +at-desktop()
        display: none


.header-title
    ellipsis-overflow(70vw)
    margin: 0
    font-weight: 200
    text-align: center

    +at-tablet()
        width: 100%
        max-width: 100%
    
    +at-desktop()
        padding: .5em 0
        color: color--dark-text
        text-transform: lowercase


.header-search
    display: none
