.header
    background: color--navbar-bg 
    color: white
    height: 4em
    width: 100%
    max-width: 100%
    max-width: 100%
    box-sizing: border-box
    box-shadow: 0px 0px 4px 2px color--box-shadow
    z-index: 1
    position: relative
    overflow: hidden

    +at-desktop()
        min-width: calc(100% - 200px)
        height: 6em
        background: none
        box-shadow: none

    &.has-search
        .header-content
            opacity: 0
            transform: translateX(100vw)
        
        .header-search
            opacity: 1
            transform: translateX(0)
            


.header-content
    width: 100%
    padding: 1em
    display: inline-flex
    justify-content: space-between
    align-items: center
    box-sizing: border-box
    position: absolute
    top: 0
    left: 0
    transform: translateX(0)
    opacity: 1
    transition: opacity 300ms ease-in-out
    will-change: transform, opacity

    +at-desktop()
        width: 90%
        border-bottom: 1px solid color--divider
        margin: 0 auto


.header-icon
    font-size: 2em
    cursor: pointer

    +at-desktop()
        display: none

        &.fa-angle-left
            display: block
            color: color--dark-text
            font-size: 3em

    +at-hd-desktop()
        &.fa-angle-left
            display: none


.header-title
    ellipsis-overflow(70vw)
    margin: 0
    font-weight: 200
    text-align: center

    +at-tablet()
        width: 100%
        max-width: 100%
    
    +at-desktop()
        padding: .5em 0
        color: color--dark-text
        text-transform: lowercase


.header-search
    height: 100%
    width: 100%
    display: flex
    justify-content: space-around
    align-items: center
    transform: translateX(100vw)
    opacity: 0
    transition: opacity 300ms ease-in-out
    will-change: transform, opacity


.header-search-input
    padding: 1em
    box-sizing: border-box
    height: 70%
    width: 80%
    outline: none
    font-size: 1.2em
    border: none
    border-radius: 10px
    padding: 1em
    box-sizing: border-box